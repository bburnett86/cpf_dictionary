<div class = "container-fluid container-margin">
	<h3 class = "center-text">Edit <%= @word.full_word %></h3>
	<%= form_for @word, url: word_path(@word) do |w| %>
		<div class="row">
			<div class="col-md-6 align-right">
					<%= w.label "Abbreviation:" %>
			</div>		
			<div class="col-md-6 align-left">
				<%= w.text_field :abbreviation %>
			</div>
		</div>
		<div class="row">
			<div class="col-md-6 align-right">
				<%= w.label "Full Word:" %>
			</div>
			<div class = "col-md-6 align-left">
				<%= w.text_field :full_word %>
			</div>
		</div>
		<div class= "row">
			<div class="col-md-6 align-right">
				<%= w.label "Definition:" %>
			</div>
			<div class="col-md-6 align-left">
				<%= w.text_area :definition %>
			</div>
		</div>
		<%= w.hidden_field :user_id, value: current_user.id %>
		<div class = "row center-text">
			<%= w.submit "Submit Changes" %>
		</div>
	<% end %>
	<% if @errors %>
	<div class="errors-container">
		<h3 class = "errors-header">ERRORS:</h3>
		<ol class= "errors-list">
			<% @errors.each do |error| %>
				<li class="error-list-item"><%= error %></li>
			<% end %>
		</ol>
	<% end %>
</div>