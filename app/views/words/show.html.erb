<div class = "row">
	<div class = "col-md-3">
		<div class = "row">
			<h4><strong>Abbreviation</strong></h4>
		</div>
		<div class = "row">
				<p><%= @word.abbreviation %></p>
		</div>
	</div>
	<div class = "col-md-3">
		<div class = "row">
			<h4><strong>Full Word</strong></h4>
		</div>
		<div class = "row">
			<p><%= @word.full_word %></p>
		</div>
	</div>
	<div class = "col-md-6">
		<div class = "row">
			<h4><strong>Definition</strong></h4>
		</div>
		<div class = "row">
			<p><%= @word.definition %></p>
		</div>
	</div>
</div>
<% if logged_in? %>
	<div class = "row">
		<div class = "col-md-6">
			<%= link_to "Edit", edit_word_path %>
		</div>
		<div class = "col-md-6">
			<%= link_to, "Delete", destroy_word_path, confirm: "Are you sure you'd like to delete #{@word.full_word}", method: delete %>
		</div>
	</div>
<% end %>